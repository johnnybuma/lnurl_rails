<div class="container mt-4">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
    <% chain_data.each do |key, value| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-header">
            <%= key.capitalize.gsub('_', ' ') %>
          </div>
          <div class="card-body">
            <% if value.is_a?(Hash) %>
              <% value.each do |sub_key, sub_value| %>
                <h6 class="card-subtitle mb-2 text-muted"><%= sub_key %></h6>
                <p class="card-text"><%= sub_value %></p>
              <% end %>
            <% elsif key.to_s.downcase == 'verificationprogress' %>
              <!-- Bootstrap Progress Bar for verificationprogress -->
              <div class="progress mb-2" style="height: 20px;">
                <div class="progress-bar" role="progressbar"
                     style="width: <%= (value.to_f * 100).round(2) %>%;"
                     aria-valuenow="<%= (value.to_f * 100).round(2) %>"
                     aria-valuemin="0" aria-valuemax="100"
                     id="<%= key.to_s.downcase %>_bar">
                  <%= (value.to_f * 100).round(2) %>%
                </div>
              </div>
            <% else %>
              <p class="card-text"><%= value %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
