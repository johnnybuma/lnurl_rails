<div class="container mt-4">
  <!-- Always Visible Verification Progress Bar -->
  <% if chain_data['verificationprogress'] %>
    <div class="progress mb-4" style="height: 20px;">
      <div class="progress-bar" role="progressbar" id="verificationprogress_bar"
           style="width: <%= (chain_data['verificationprogress'].to_f * 100).round(2) %>%;"
           aria-valuenow="<%= (chain_data['verificationprogress'].to_f * 100).round(2) %>"
           aria-valuemin="0" aria-valuemax="100">

        <%= (chain_data['verificationprogress'].to_f * 100).round(2) %>%
      </div>
    </div>
  <% end %>

  <!-- Collapsible Cards for Each Data Point -->
  <div class="accordion" id="dataAccordion">
    <% chain_data.each_with_index do |(key, value), index| %>
      <% next if key.to_s.downcase == 'verificationprogress' %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%= index %>">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
            <%= key.capitalize.gsub('_', ' ') %>
          </button>
        </h2>
        <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#dataAccordion">
          <div class="accordion-body">
            <% if value.is_a?(Hash) %>
              <% value.each do |sub_key, sub_value| %>
                <strong><%= sub_key %>:</strong> <%= sub_value %><br>
              <% end %>
            <% else %>
              <%= value %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



