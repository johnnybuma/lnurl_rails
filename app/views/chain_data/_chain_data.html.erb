<div class="container mt-4">
  <!-- Always Visible Verification Progress Bar -->
  <% if chain_data['verificationprogress'] %>
    <div class="progress mb-4" id="progress_bar_parent" style="height: 20px;">
      <div class="progress-bar" role="progressbar" id="verificationprogress_bar"
           style="width: <%= (chain_data['verificationprogress'].to_f * 100).round(2) %>%;"
           aria-valuenow="<%= (chain_data['verificationprogress'].to_f * 100).round(2) %>"
           aria-valuemin="0" aria-valuemax="100">
        <%= (chain_data['verificationprogress'].to_f * 100).round(2) %>%
      </div>
    </div>
  <% end %>

  <!-- Card layout for Data Points -->
  <div class="row">
    <% chain_data.each_with_index do |(key, value), index| %>
      <% next if key.to_s.downcase == 'verificationprogress' %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= key.capitalize.gsub('_', ' ') %></h5>
            <p class="card-text"><%= value %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<style>

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 5px; /* 5px rounded corners */
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.3);
    }

    .card-body {
        padding: 2em;
    }

    .card-title {
        color: #333;
        font-size: 1.2em;
        font-weight: bold;
    }

    .card-text {
        color: #666;
    }


</style>