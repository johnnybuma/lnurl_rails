<%= form_with(model: room, local: false ) do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :is_private, style: "display: block" %>
    <%= form.select :is_private, ['True', 'False'] %>
  </div>

  <div>
    <%= form.label :project_id, style: "display: block" %>
    <%= form.select :project_id, options_from_collection_for_select(Project.all, :id, :title), {:include_blank => 'Select Project'},{ class: ''} %>
  </div>

  <div>
    <%= form.submit "Add Room", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
